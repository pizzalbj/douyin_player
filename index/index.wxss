page {
  height: 100%;
  background: #000000;
}

.root {
  width: 100%;
  height: 100%;
  background-color: #000000;
}

swiper {
  width: 100%;
  height: 100%;
}

swiper-item {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

swiper-item .action {
  position: absolute;
  bottom: 480rpx;
  right: 24rpx;
}

.action .wrap {
  color: #FFFFFF;
  font-size: 28rpx;
  margin-bottom: 36rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.action-btn {
  width: 58rpx;
  margin-bottom: 8rpx;
}

swiper-item .info {
  font-size: 14px;
  color:#FFFFFF;
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  width: 100%;
  height: auto;
  padding: 24rpx 0rpx 24rpx 24rpx;
  box-sizing: border-box;
  background-color: transparent; /* 浏览器不支持时显示 */
  background-image: linear-gradient(rgba(0, 0, 0, 0.01), rgba(0, 0, 0, .3));
}

swiper-item .header {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 12rpx;
}

swiper-item .header .avatar {
  width: 68rpx;
  height: 68rpx;
  border-radius: 68rpx;
  border: 1px solid #FFFFFF;
  margin-right: 20rpx;
}

.content {
  font-size: 28rpx;
  margin-bottom: 18rpx;
}

.checkBtn {
  width: 50%;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  font-size: 24rpx;
  border-radius: 8rpx;
  border: 1px solid #FFFFFF;
  margin: 0 auto;
}

swiper video {
  width: 100%;
  height: 100%;
}

.pause {
  width: 60px;
  position: absolute;
  top: calc(50% - 30px);
  left: calc(50% - 30px);
}

.heart{
  width: 60rpx;
  height: 54rpx;
  background: transparent;
  animation: test 1s linear 1;
  filter:drop-shadow(0px 0px 4px #FFFFFF);
}

.heart1{
  width: 60rpx;
  height: 54rpx;
  background: transparent;
  animation: test 1s linear 1;
  filter:drop-shadow(0px 0px 4px rgb(255,20,20));
}

.heart:before, .heart:after{
  content: "";
  position: absolute;
  width: 30rpx;
  height: 48rpx; 
  left: 30rpx;
  /* background: rgb(192, 192, 192); */
  background-color: #FFFFFF;
  border-radius: 30rpx 30rpx 0 0;
  transform:rotate(-45deg);
  transform-origin: 0 100%;
}

.heart1:before, .heart1:after{
  content: "";
  position: absolute;
  width: 30rpx;
  height: 48rpx; 
  left: 30rpx;
  background: rgb(255, 0, 0);
  border-radius: 30rpx 30rpx 0 0;
  transform:rotate(-45deg);
  transform-origin: 0 100%;
}

.heart:after, .heart1:after{
  left: 0;
  transform:rotate(45deg);
  transform-origin: 100% 100%;
}

@keyframes test{
  0%{
      transform: scale(0.8,0.8);
      opacity: 1;
  }
  25%{
      transform: scale(1,1);
      opacity: 0.8;
  }
  100%{
      transform: scale(0.8,0.8);
      opacity: 1;
  }
}